<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="popNews"
            type="com.example.common.models.Articles" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="@dimen/dp_14"
        android:id="@+id/root_layout">

        <ImageView
            tools:imageUrl="@{popNews.urlToImage}"
            android:scaleType="centerCrop"
            android:src="@drawable/test_image"
            android:id="@+id/iv_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/dp_16" />

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{popNews.title}"
            android:minLines="1"
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            android:textColor="@color/black"
            tools:text="Commitment towards business happy towasrs"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{popNews.description}"
            android:id="@+id/tv_desc"
            android:minLines="2"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            tools:text="The current COVID-19 crisis has presented enterprises across the â€¦"
            android:textSize="@dimen/sp_12"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@{popNews.source.name}"
            android:textColor="@color/clr_575757"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/pill_shape"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingVertical="4dp"
            android:paddingHorizontal="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="@+id/iv_image"
            tools:text="CNN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12" />

        <ImageView
            android:id="@+id/iv_bookmark"
            android:background="@drawable/oval_back"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_bookmark"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_16" />

        <View
            android:layout_marginTop="@dimen/dp_14"
            app:layout_constraintTop_toBottomOf="@+id/iv_image"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:background="#D9D9D9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

